<div class="add-album__wrapper">
  <div class="add-album">
    <div class="modal__header">
      <div class="header__title">
        <h2 class="modal__title">{{modal_title}}</h2>
      </div>
      <button value="" class="btn_close" id="btn_close_modal">
        <svg class="svg__icon_close">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/sprites/svg/symbol/bg-sprite.svg#icon-close"></use>
        </svg>
      </button>
    </div>
    <div class="modal__form">
      <form action="/main/album/addphoto" id="popup__add_photo" class="form__add-album" method="post" enctype="multipart/form-data">
        <div class="form__row">
          <input type="text" value="{{type_modal}}" name="type_modal" style="display: none;">
          <input type="text" value="{{photo_id}}" name="photo_id" style="display: none;">
          <input type="text" value="{{album_id}}" name="album_id" style="display: none;">
          <label for="album_name" class="label">Название</label>
          <input type="text" value="{{photo_name}}" name="photo_name" id="photo_name" class="input">
        </div>
        <div class="form__row">
          <label for="album_description" class="label">Описание</label>
          <textarea name="photo_description" id="photo_description" class="textarea">{{photo_desc}}</textarea>
        </div>

        {{#if add_photo}}
        <div class="form__row">
          <div class="modal__preview-container">
            <div class="modal__preview_img">
              <img src="{{photo_img}}" alt="" class="modal__img modal__img-bg">
            </div>
          </div>
          <label class="btn__upload">Загрузить фотографию
            <input id="upload_bg" type="file" accept="image/jpeg,image/png,image/jpg" name="upload_bg" class="upload">
          </label>
          <div class="comment">
            <span class="span__comment">(файл должен быть размером не более 
              <span class="img__size">1024</span> КБ)
            </span>
          </div>
        </div>
        {{/if}}
      </form>
    </div>
    <div class="modal__footer">
      <button type="submit" id="btn_submit" form="popup__add_photo" class="btn_modal">Сохранить</button>
      <button class="btn_cancel" id="btn_cancel_modal">Отменить</button>
      {{#if edit_photo}}
      <button class="btn_delete" id="del_photo" >Удалить
        <svg class="svg__icon_delete">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/sprites/svg/symbol/bg-sprite.svg#icon-delete"></use>
        </svg>
      </button>
      {{/if}}
    </div>
  </div>
</div>
